{% extends 'ZiaJobBundle::layout.html.twig' %}

{% block title %}
  Job - Editing Job "{{ job }}"
{% endblock %}
  
{% block content %}
<h1>Job edit</h1>

<form action="{{ path('job_update', { 'id': job.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('job') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('job_delete', { 'id': job.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}