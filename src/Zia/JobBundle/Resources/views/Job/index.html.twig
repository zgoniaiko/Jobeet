{% extends 'ZiaJobBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}

  <link href="{{ asset('bundles/ziajob/css/jobs.css') }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}
  
{% block title %}
  Job - List of Jobs
{% endblock %}
  
{% block content %}
<div id="jobs">
  <table class="jobs">
    {% for index, job in entities %}
      <tr class="{{ cycle(['odd', 'even'], index) }}">
        <td class="location">{{ job.location }}</td>
        <td class="position">
          <a href="{{ url('job_show', { 'id': job.id }) }}">
            {{ job.position }}
          </a>
        </td>
        <td class="company">{{ job.company }}</td>
      </tr>
    {% endfor %}
  </table>
</div>
{% endblock %}