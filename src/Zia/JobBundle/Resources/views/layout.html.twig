{% extends '::layout.html.twig' %}
{% block stylesheets %}
  {{ parent() }}

  <link href="{{ asset('bundles/ziajob/css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  
  <script type="text/javascript" src="{{ asset('bundles/ziajob/js/jquery-1.6.2.min.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="container">
      <div id="header">
        <div class="content">
          <h1><a href="{{ path('job') }}">
            <img src="{{ asset('bundles/ziajob/images/logo.jpg') }}" alt="Jobeet Job Board" />
          </a></h1>
 
          <div id="sub_header">
            <div class="post">
              <h2>Ask for people</h2>
              <div>
                <a href="{{ path('job_new') }}">Post a Job</a>
              </div>
            </div>
 
            <div class="search">
              <h2>Ask for a job</h2>
              <form action="" method="get">
                <input type="text" name="keywords"
                  id="search_keywords" />
                <input type="submit" value="search" />
                <div class="help">
                  Enter some keywords (city, country, position, ...)
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
 
      <div id="content">
      {% if app.session.hasFlash('notice') %}
        <div class="flash_notice">
          {{ app.session.flash('notice') }}
        </div>
      {% endif %}
      {% if app.session.hasFlash('error') %}
        <div class="flash_error">
          {{ app.session.flash('error') }}
        </div>
      {% endif %}
 
        <div class="content">
        {% block content %}
          Coming Soon!
        {% endblock %}
        </div>
      </div>
 
      <div id="footer">
        <div class="content">
          <span class="symfony">
            <img src="{{ asset('bundles/ziajob/images/jobeet-mini.png') }}" />
            powered by <a href="http://www.symfony.com/">
            <img src="{{ asset('bundles/ziajob/images/symfony2.png') }}" alt="symfony framework" />
            </a>
          </span>
          <ul>
            <li><a href="">About Jobeet</a></li>
            <li class="feed"><a href="">Full feed</a></li>
            <li><a href="">Jobeet API</a></li>
            <li class="last"><a href="">Affiliates</a></li>
          </ul>
        </div>
      </div>
    </div>
{% endblock %}